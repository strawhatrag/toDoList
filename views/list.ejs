<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>To do List</title>
  <link rel="stylesheet" href="css/styles.css" />
</head>

<body>
  <div class="container">
    <div class="card">
      <h1>
        <%= weekday %>
      </h1>

      <div class="columns">
        <ul class="column">
          <% newListItems.forEach(item=> { %>
            <li>
              <input type="checkbox" id="<%= item %>" name="<%= item %>">
              <label for="<%= item %>">
                <%= item %>
              </label>
            </li>
            <% }) %>
        </ul>
      </div>

      <form class="item" action="/" method="POST">
        <input type="text" placeholder="Enter Task" name="newItem">
        <button type="submit" name="button">Add</button>
      </form>
    </div>
  </div>
  <br />
  <footer class="container">@strawhatRag</footer>

</body>

</html>